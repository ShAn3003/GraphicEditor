<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>
<?import shan.interfaces.MyCanvas?>
<?import shan.interfaces.MyVBox?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.AnchorPane?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="shan.controller.Controller">
    <top>
        <MenuBar>
            <Menu text="_File">
                <MenuItem onAction="#handleNew" text="_New"/>
                <MenuItem onAction="#handleOpen" text="_Open"/>
                <MenuItem onAction="#handleSave" text="_Save"/>
            </Menu>
            <Menu  text="_Edit">
                <MenuItem  onAction="#handleRedo" text="_Redo"/>
                <MenuItem  onAction="#handleUndo" text="_Undo"/>
            </Menu>
            <Menu  text="_Additional">
                <MenuItem  disable="false" onAction="#handleHelp" text="_Help"/>
                <MenuItem disable="true" onAction="#SetCanvasColor" text="_CanvasColor"/>
            </Menu>
        </MenuBar>


    </top>
    <left>
        <MyVBox fx:id="figureBox" prefHeight="800" prefWidth="120" alignment="TOP_CENTER"
                style="-fx-background-color: #f0f0f0; -fx-padding: 10; -fx-spacing: 10;">

            <Button text="Circle"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Rectangle"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Line"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Text"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Ellipse"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Draw"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
            <Button text="Select"
                    style="-fx-font-size: 14px; -fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-color: #2196F3; -fx-border-width: 3px; -fx-border-radius: 5px;"
                    minWidth="90" minHeight="40" onAction="#pressOnFigure"/>
        </MyVBox>


    </left>
    <center>
        <ScrollPane >
                    <MyCanvas fx:id="canvas"
                              onMouseClicked="#canvasMouseClicked"
                              onMouseDragEntered="#canvasMouseDragEnter"
                              onMouseDragExited="#canvasMouseDragExit"
                              onMouseDragged="#canvasMouseDragged"
                              onMouseDragOver="#canvasMouseDragOver"
                              onMouseDragReleased="#canvasMouseDragReleased"
                              onMouseEntered="#canvasMouseEntered"
                              onMouseExited="#canvasMouseExited"
                              onMouseMoved="#canvasMouseMoved"
                              onMousePressed="#canvasMousePressed"
                              onMouseReleased="#cavasMouseReleased"
                              width="600" height="400"
                              style="-fx-border-color: black; -fx-border-width: 1px;"/>

        </ScrollPane>


    </center>
    <right>
        <MyVBox fx:id="paraSetInter" prefHeight="200" prefWidth="120" minHeight="Infinity" minWidth="90"
                alignment="TOP_CENTER">

        </MyVBox>
    </right>
    <bottom>
        <VBox alignment="TOP_CENTER"  prefHeight="200" prefWidth="-Infinity"  spacing="20">
            <Label text=" "/>
            <Label fx:id="remarkArea" textAlignment="CENTER" text="HERE">
            </Label>
        </VBox>

    </bottom>
</BorderPane>
